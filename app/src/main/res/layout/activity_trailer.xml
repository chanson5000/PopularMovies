<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AllMatchParentVertical">

    <TextView
        android:id="@+id/trailer_movie_title"
        style="@style/MovieTitleHeader" />

    <TextView
        android:id="@+id/trailer_header"
        android:text="@string/trailers"
        style="@style/ActivityHeader" />

    <FrameLayout
        style="@style/FrameLayoutMatchParent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp" />

        <ProgressBar
            android:id="@+id/trailers_activity_progress_bar"
            style="@style/LoadingIndicator" />

        <TextView
            android:id="@+id/no_trailers"
            android:text="@string/no_trailers"
            style="@style/NothingIndicator" />

    </FrameLayout>

</LinearLayout>